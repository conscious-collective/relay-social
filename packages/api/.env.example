# Database
DATABASE_URL=file:./relay.db

# Redis (for BullMQ job queue)
REDIS_URL=redis://localhost:6379

# API Configuration
API_PORT=3001
DASHBOARD_PORT=3000

# Instagram OAuth (Meta Graph API)
# Create app at: https://developers.facebook.com/
META_APP_ID=your_meta_app_id
META_APP_SECRET=your_meta_app_secret
META_REDIRECT_URI=http://localhost:3001/api/oauth/instagram/callback

# Twitter OAuth (X API v2)
# Create app at: https://developer.twitter.com/
TWITTER_CLIENT_ID=your_twitter_client_id
TWITTER_CLIENT_SECRET=your_twitter_client_secret
TWITTER_REDIRECT_URI=http://localhost:3001/api/oauth/twitter/callback

# Media Storage (for future S3/R2 support)
MEDIA_STORAGE=local
# S3_BUCKET=your-bucket
# S3_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key